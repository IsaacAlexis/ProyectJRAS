<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/encabezado_formularios"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConsumoAnterior"
            android:layout_width="171dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/btnRegistrarConsumo"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="@+id/btnRegistrarConsumo"
            app:layout_constraintTop_toBottomOf="@+id/tilPropietario" >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtConsumoAnterior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_baseline_assessment_24"
            android:hint="Consumo anterior"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="5" />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPagosAnterior"
            android:layout_width="171dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/btnRegistrarConsumo"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="@+id/btnRegistrarConsumo"
            app:layout_constraintTop_toBottomOf="@+id/tilConsumoAnterior">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPagoAnterior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_baseline_assessment_24"
                android:hint="Pago anterior"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="5" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConsumo"
            android:layout_width="171dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/btnRegistrarConsumo"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="@+id/btnRegistrarConsumo"
            app:layout_constraintTop_toBottomOf="@+id/tilPagosAnterior">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtConsumo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/ic_baseline_assessment_24"
                android:hint="Consumo actual (mÂ³)"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button

            android:id="@+id/btnRegistrarConsumo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordes_redondos_rojo"
            android:text="Registrar"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilConsumo" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNumerocasa"
            android:layout_width="284dp"
            android:layout_height="83dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNumeroCasaConsumo"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:clickable="false"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:editable="false"
                android:hint="No. Casa" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPropietario"
            android:layout_width="284dp"
            android:layout_height="83dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/tilNumerocasa">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPropietarioC"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:clickable="false"
                android:drawableLeft="@drawable/ic_baseline_face_24"
                android:editable="false"
                android:hint="Propietario" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txFechaConsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:text="Fecha:"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="195dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtBarCodeConsumo"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:clickable="false"
                    android:drawableLeft="@drawable/ic_baseline_addchart_24"
                    android:hint="No. Medidor"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnBuscarConsumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textInputLayout2"
                android:background="@drawable/bordes_redondos_rojo"
                android:text="Buscar"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnEscanearConsumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textInputLayout2"
                android:background="@drawable/bordes_redondos_rojo"
                android:text="Escanear" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>