<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="@drawable/encabezado_formularios"></ImageView>

        <Button
            android:id="@+id/btnBuscarRecibo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilBarcode"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bordes_redondos_rojo"
            android:text="Escanear Recibo" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBarcode"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="50dp">

            <EditText
                android:id="@+id/txtBarCodeRecibo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="N# DE CUENTA O MEDIDOR"></EditText>
                <!--android:inputType="number"-->


        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>





</ScrollView>
